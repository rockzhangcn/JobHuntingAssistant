{
  "manifest_version": 3,
  "name": "AutoCoverletter",
  "version": "1.0",
  "description": "Auttomatically generate a cover letter adapts to current position.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "declarativeContent",
    "tabs",
    "background",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/",
        "https://www.seek.com.au/",
        "https://www.seek.co.nz/"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://www.seek.com.au/*",
    "https://www.seek.co.nz/*",
    "https://languagetojob.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_title": "AutoCoverletter",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
